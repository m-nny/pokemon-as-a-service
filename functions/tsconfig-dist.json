{
  "display": "Node 20",

  "compilerOptions": {
    "incremental": true,

    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ESNext",

    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
